# ============================================================================
# MedHub API Environment Configuration
# ============================================================================
# Copy this file to .env and update values for your environment.
# NEVER commit your .env file to version control!
# ============================================================================

# =================================
# ENVIRONMENT
# =================================
ENVIRONMENT=development  # development | staging | production

# =================================
# DATABASE CONFIGURATION
# =================================
# For development: USE_SQLITE=true (uses local SQLite file)
# For production: USE_SQLITE=false with DATABASE_URL set
USE_SQLITE=true

# PostgreSQL connection string (required when USE_SQLITE=false)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Set to "true" to log SQL queries (NEVER enable in production!)
DB_ECHO=false

# =================================
# SECURITY (CRITICAL)
# =================================
# JWT secret key - MUST be unique and secure in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =================================
# CORS & FRONTEND
# =================================
FRONTEND_URL=http://localhost:3000

# =================================
# REDIS (Optional - for production)
# =================================
# Used for token blacklist, caching, and rate limiting in distributed systems
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false

# =================================
# PAYMENT GATEWAY (Razorpay)
# =================================
# Get credentials from https://dashboard.razorpay.com
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# =================================
# LIVEKIT (Video/Audio Calls)
# =================================
# Self-hosted LiveKit server configuration
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_WS_URL=ws://localhost:7880
LIVEKIT_HTTP_URL=http://localhost:7880

# =================================
# TWILIO (SMS & WhatsApp)
# =================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_SMS_FROM=+1234567890

# =================================
# EMAIL (SendGrid)
# =================================
SENDGRID_API_KEY=
FROM_EMAIL=noreply@medhub.com

# =================================
# FILE UPLOADS
# =================================
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# =================================
# AWS S3 (For recordings & file storage)
# =================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
S3_BUCKET=medhub-recordings

# =================================
# APPLICATION INFO
# =================================
APP_NAME=MedHub
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
