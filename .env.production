# Production Environment Configuration
# Domain: api.medihub.mrbiz.in
# LiveKit: rtc.mrbiz.in

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_USER=medhub_user
POSTGRES_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE  # REQUIRED: Change this!
POSTGRES_DB=medhub_db
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (Caching & Session)
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE  # REQUIRED: Change this!

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
ENVIRONMENT=production

# JWT Secret Key - REQUIRED: Generate a secure 256-bit key
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG

# =============================================================================
# LIVEKIT CONFIGURATION (Video Calls)
# =============================================================================
# Production LiveKit domain
LIVEKIT_HOST=wss://rtc.mrbiz.in
LIVEKIT_API_KEY=YOUR_LIVEKIT_API_KEY
LIVEKIT_API_SECRET=YOUR_LIVEKIT_API_SECRET

# =============================================================================
# PAYMENT CONFIGURATION (Razorpay)
# =============================================================================
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@medihub.mrbiz.in

# =============================================================================
# SMS CONFIGURATION (Twilio - Optional)
# =============================================================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# CLOUD STORAGE (AWS S3 or Compatible)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=medihub-uploads
AWS_REGION=us-east-1

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=https://your_key@sentry.io/your_project_id

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Production API URL
NEXT_PUBLIC_API_URL=https://api.medihub.mrbiz.in/api
NEXT_PUBLIC_WS_URL=wss://api.medihub.mrbiz.in/ws

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=https://api.medihub.mrbiz.in,https://medihub.mrbiz.in

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
API_DOMAIN=api.medihub.mrbiz.in
LIVEKIT_DOMAIN=rtc.mrbiz.in
FRONTEND_DOMAIN=medihub.mrbiz.in